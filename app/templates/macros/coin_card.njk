{% macro card(coin) %}

<div class="panel panel-{{ coin }}">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-3">
                <img height="70px" width="70px" src="../img/{{ coin }}.png" />
            </div>
            <div class="col-xs-9 text-right">
                <div id="{{ coin }}-balance" class="huge"><div class="{{ coin }}-lds-facebook" style="float:right;margin-right:5%;"><div></div><div></div><div></div></div></div>
                <div class="{{ coin }}-bal">Balance</div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <span class="pull-left {{ coin }}-bal">Unlocked Balance</span>
        <span id="{{ coin }}-unlocked-balance" class="pull-right"><div class="{{ coin }}-lds-ellipsis"><div></div><div></div><div></div><div></div></div></span>
        <div class="clearfix"></div>
    </div>                       
</div>

{% endmacro %}
