{% block content %}
<div class="container">
    <div class="row bodyfade" style="margin-top:10%;">
<div class="row">
<div class="col-md-12" align="center">
    <img width="15%" height="15%" src="https://github.com/electronero-project/Webnero-UI/raw/develop/icons/thunder.gif" />
    <p class="panel-heading" >Go-Electronero</p>
</div>
</div>
        <div class="col-md-4 col-md-offset-4" style='margin-top:-7%;'>
            <div class="power-button login-panel panel panel-etnx">
                <div class="power-button power-switch" style="text-align: center">
                    <img width="25%" height="25%" src="https://github.com/electronero-project/Webnero-UI/raw/develop/icons/cloud-network.gif" />
                    <p class="panel-heading" >start Nero {OS}</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-2 col-md-offset-4" style="align-items:left !importantl;align:left;">
            <div class="power-button login-panel panel panel-etnx">
                <div class="power-button power-switch" style="text-align: center">
                    <img width="25%" height="25%" src="https://github.com/electronero-project/Webnero-UI/raw/develop/icons/rocket.gif" />
                    <p class="panel-heading" >Exchanges (CEX)</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-2 " style="align-items:right !importantl;align:right;">
            <div class="power-button login-panel panel panel-etnx">
                <div class="power-button power-switch" style="text-align: center">
                    <img width="25%" height="25%" src="https://github.com/electronero-project/Webnero-UI/raw/develop/icons/rocket.gif" />
                    <p class="panel-heading" >Exchanges (DEX)</p>
                </div>
            </div>
        </div>

        
        <div class="col-md-2 col-md-offset-4" style="align-items:right !importantl;align:right;">
            <div class="power-button login-panel panel panel-etnx">
                <div class="power-button power-switch" style="text-align: center">
                    <img width="25%" height="25%" src="https://github.com/electronero-project/Webnero-UI/raw/develop/icons/note.gif" />
                    <p class="panel-heading" >Bridge (ETH/DOGE/LTC)</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-2 " style="align-items:right !importantl;align:right;">
            <div class="power-button login-panel panel panel-etnx">
                <div class="power-button power-switch" style="text-align: center">
                    <img width="25%" height="25%" src="https://github.com/electronero-project/Webnero-UI/raw/develop/icons/document.gif" />
                    <p class="panel-heading" >Contracts</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-md-offset-4"style="margin-top:-7%;">
            <div class="power-button login-panel panel panel-etnx">
                <div class="power-button power-switch" style="text-align: center">
                    <img width="25%" height="25%" src="https://github.com/electronero-project/Webnero-UI/raw/develop/icons/bubble-chat.gif" />
                    <p class="panel-heading" >Ethernotes (CMS)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-md-offset-4" style="margin-top:-7%;">
            <div class="power-button login-panel panel panel-etnx">
                <div class="power-button power-switch" style="text-align: center">
                    <img width="25%" height="25%" src="https://github.com/electronero-project/Webnero-UI/raw/develop/icons/019-safe box.gif" />
                    <p class="panel-heading" >Exchanges (CEX)</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="dashboard login-root bodyfade">
    <div class="container">
        <div id="login-container" class="row bodyfade">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-etnx">
                    <div class="panel-heading" style="text-align: center">
                        {% for coin in coins %}
                            <img height="40px" width="40px" src="../img/{{coin}}.png" />
                        {% endfor %}
                    </div>
                    <div class="panel-body">
                        <div class="alert alert-danger" style="display: none">
                            Login fail, please check email and password
                        </div>
                        {% if (coin) %}
                        <div class="alert alert-success" style="display: none">
                            Login successful, retrieving data from {{coin}} blockchain, please wait
                        </div>
                        {% else %}
                        <div class="alert alert-success" style="display: none">
                            Login successful, Webnero is retrieving data from Crystaleum blockchain, please wait
                        </div>
                        {% endif %}
                        
                        <div role="form">
                        <div class="row" style="position: relative; top:0;margin-bottom:3%;padding-bottom:2%;"> 
                        <ul style="list-style-type: none;margin: 0;padding: 0;">
                          <li style="display: inline; text-align:left;padding-left:2%;"><button class="btn-login" onclick="window.location.href='https://webnero.electronero.org/reset.html'">Recover</button></li>
                          <li style="display: inline; padding-right:20%;"></li>
                          <li style="display: inline; text-align:right; position: absolute; right: 0;padding-right:2%;"><button class="btn-login" onclick="window.location.href='https://webnero.electronero.org/register.html'">Register</button></li>
                        </ul>
                        </div>
                            <div class="col-lg-12 col-mg-12 col-sm-12">
                            <fieldset>
                                <div class="form-group">
                                    <input id="email" class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input id="password" class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <button id="login" class="btn btn-lg btn-login btn-block btn-primary">Connect</button>
                            </fieldset>
                        </div>
                                <div class="col-lg-12 col-mg-12 col-sm-12" style="text-align: center" align="center">
                                </br>
                                <div class="row" style="position: relative; top:0;margin-bottom:2%;padding-bottom:1%;"> 
                                <ul style="list-style-type: none; margin-right:auto; margin-left:auto;padding: 0;">
                                  <li style="display: inline; text-align: center; position: relative; margin-right:auto; margin-left:auto;"><button class="btn-login" onclick="window.location.href='https://t.me/etnxsupport'">Need Help?</button></li>
                                </ul>
                                </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include "../templates/pin-code.njk" %}
    </div>
    {% include "../templates/modals/spinner.njk" %}
</div>
{% endblock %}
{% block scripts %} 
    <script type="text/javascript">
        $(function() {
            $(".power-button").css("display", "block");
            $(".power-switch").css("display", "block");
            $(".dashboard").css("display", "none");
            $(document).on("click", ".power-switch", function(){
                $(".power-button").css("display", "none");
                $(".power-switch").css("display", "none");
                $(".dashboard").css("display", "block");
            });
        });
    </script>
    <script type="text/javascript" src="../dist/js/pin-code-utils.js?v=6001"></script>
    <script type="text/javascript" src="../dist/js/login-utils.js?v=6022"></script>
    <script type="text/javascript" src="../dist/js/login.js?v=8104"></script>
{% endblock %}
