<!-- login.njk -->
{% extends "layout.njk" %}

{% if not pageName %}
<span>new page</span>
{% endif %}

{% block content %}
<div class="login-root bodyfade">
    <div class="container">
        <div id="login-container" class="row bodyfade">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-etnx">
                    <div class="panel-heading" style="text-align: center">
                        {% if (coin) %}
                        {% for coin in coins %}
                            <img height="40px" width="40px" src="../img/{{coin}}.png" />
                        {% endfor %}
                        {% else %}
                        <img height="250px" width="250px" src="../img/etnx.png" />
                        {% endif %}
                    </div>
                    <div class="panel-body">
                        <div class="alert alert-danger" style="display: none">
                            Login fail, please check email and password. If issue persists, contact support@electronero.org
                        </div>
                        {% if (coin) %}
                        <div class="alert alert-success" style="display: none">
                            Login successful, retrieving data from {{coin}} blockchain, please wait
                        </div>
                        {% else %}
                        <div class="alert alert-success" style="display: none">
                            Login successful, Webnero is retrieving data from Electronero Passport Protocol, please wait while we communicate with Electronero Network blockchain nodes
                        </div>
                        {% endif %}
                        
                        <div role="form">
                        <span class="col-lg-4 col-md-4 col-sm-4" align="left">
                        <a href="https://webnero.electronero.org/register.html">Create New Wallet</a>
                        </span>
                        <div class="col-lg-4 col-mg-4 col-sm-4"></div>
                        <div class="col-lg-4 col-md-4 col-sm-4" align="right">
                        <a href="https://webnero.electronero.org/reset.html">Recover Wallet</a>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <fieldset>
                                <div class="form-group">
                                    <input id="email" class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input id="password" class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <button id="login" class="btn btn-lg btn-login btn-block btn-primary">Login</button>
                            </fieldset>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include "../templates/pin-code.njk" %}
    </div>
    {% include "../templates/modals/spinner.njk" %}
</div>
{% endblock %}
{% block scripts %} 
    <script type="text/javascript" src="../dist/js/pin-code-utils.js"></script>
    <script type="text/javascript" src="../dist/js/login-utils.js?v=4020"></script>
    <script type="text/javascript" src="../dist/js/login.js?v=4020"></script>
{% endblock %}