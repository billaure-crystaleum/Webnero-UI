<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}
      <div id="wrapper">

        {% include "../templates/navigation.njk" %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/coin_card.njk" as etnx %}
                    {{ etnx.card('etnx') }}
                </div>
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/coin_card.njk" as etnxp %}
                    {{ etnxp.card('etnxp') }}
                </div>
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/coin_card.njk" as ltnx %}
                    {{ ltnx.card('ltnx') }}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/coin_card.njk" as gldx %}
                    {{ gldx.card('gldx') }}
                </div>
                <div class="col-lg-4 col-md-12 item">
                    {% import "../templates/macros/coin_card.njk" as crfi %}
                    {{ crfi.card('crfi') }}
                </div>
            </div>
            <div class="row" style="color: #018ccf;">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="bridge-history">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Coin</th>
                                <th>Block</th>
                                <th>Email</th>
                                <th>Allowance</th>
                                <th>Quote</th>
                                <th>Disposal</th>
                                <th>Payment ID</th>
                                <th>Claimed</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-etnx">
                        <div class="panel-heading">
                            <i class="fa fa-clock-o fa-fw"></i> Bridge to Crystaleum
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="form-group" style="text-align: center">
                                    {% for coin in coins %}
                                        <button id="{{coin}}-send" class="btn btn-lg btn-login coin-selector {{ "btn-selected" }}">
                                            <img height="70px" width="70px" src="../img/{{coin}}.png" />
                                        </button>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12" style="margin-bottom:5%;">
                                    <div role="form">
                                        <label>Amount to Pledge</label>
                                        <div class="form-group input-group input-group-addon">
                                            <input id="amount" type="number" class="form-control" readonly>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12" style="margin-bottom:5%;">
                                    <div role="form">
                                        <label>Amount to Claim</label>
                                        <div class="form-group input-group input-group-addon">
                                            <span align="left" style="color:black;width:100%;font-size:1em;" id="claim-amount" type="text" class="form-control" readonly></span readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div style="margin-bottom:2%;" class="col-md-12 col-sm-12 col-xs-12 col-lg-12">
                                    <div role="form">
                                        <label>Payment ID</label>
                                        <button style="visibility:hidden !important;color:black;" id="pid-button"></button>
                                        <div align="center" class="form-group input-group input-group-addon">
                                            <input style="color:black;width:100%;font-size:1em;" type="text" id="random-id-value" readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group" style="text-align: center">
                                    <span id="send-all" class="" style="visibility:hidden !important;">All</span>
                                    <button id="claim" class="btn btn-lg btn-login btn-primary" style="width: 100px"> Claim </button>
                                    <button class="btn btn-lg btn-login btn-primary" style="width: 100px"> Cancel </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% include "../templates/modals/pincode.njk" %}
        
        {% include "../templates/modals/spinner.njk" %}
    </div>


{% endblock %}

{% block scripts %} 
    <script type="text/javascript" src="../plugins/metisMenu/metisMenu.min.js"></script>
    <script type="text/javascript" src="../dist/js/pin-code-utils.js"></script>
    <script type="text/javascript" src="../dist/js/bridge.js?v=2034"></script>
    <script type="text/javascript" src="../dist/js/pid.js?v=2034"></script>
    <script type="text/javascript" src="../plugins/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="../plugins/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="../plugins/datatables-responsive/dataTables.responsive.js"></script>
{% endblock %}
