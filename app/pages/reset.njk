<!-- login.njk -->
{% extends "layout.njk" %}

{% block content %}
<div class="login-root bodyfade">
    <div class="container">
        <div id="reset-container" class="row bodyfade">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-crfi">
                    <div class="panel-heading" style="text-align: center">
                        {% for coin in coins %}
                            <img height="40px" width="40px" src="../img/{{coin}}.png" />
                        {% endfor %}
                    </div>
                    <div class="panel-body">
                        <div class="alert alert-danger" style="display: none">
                            Reset fail, please confirm email matches your account, or try another email address.
                        </div>
                        {% if (coin) %}
                        <div class="alert alert-success" style="display: none">
                            Retrieving data from {{coin}} blockchain, please wait.
                        </div>
                        {% else %}
                        <div class="alert alert-success" style="display: none">
                           Email sent! To reset your CrystalID password, please check your email for the link.
                        </div>
                        {% endif %}
                        
                        <div role="form">
                        <div>
                        <a href="https://id.crystaleum.org/register.html">Register</a>
                        </div>
                        <div>
                        <a href="https://id.crystaleum.org/login.html">Login</a>
                        </div>
                            <fieldset>
                                <div class="form-group">
                                    <input id="email" class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input id="confirm-email" class="form-control" placeholder="Confirm E-mail" name="confirm-email" type="email" value="">
                                </div>
                                <button id="reset" class="btn btn-lg btn-login btn-block btn-primary">Reset Password</button>
                            </fieldset>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include "../templates/pin-code.njk" %}
    </div>
    {% include "../templates/modals/spinner.njk" %}
</div>
{% endblock %}
{% block scripts %} 
    <script type="text/javascript" src="../dist/js/login-utils.js?v=2030"></script>
    <script type="text/javascript" src="../dist/js/reset.js?v=2204"></script>
{% endblock %}
