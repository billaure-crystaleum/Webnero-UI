<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}

    <div class="container">
        <div id="register-container" class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-etnx">
                    <div class="panel-heading" style="text-align: center">
                        {% for coin in coins %}
                            <img height="40px" width="40px" src="../img/{{coin}}.png" />
                        {% endfor %}
                    </div>
                    <div class="panel-body">
                        <div class="alert alert-danger" style="display: none">
                        </div>
                        
                        <div role="form">
                        <div class="col-lg-4 col-md-4 col-sm-4" align="left">
                        <a href="https://webnero.electronero.org/login.html">Connect Wallet</a>
                        </div>                        
                        <div class="col-lg-4 col-mg-4 col-sm-4"></div>
                        <div class="col-lg-4 col-md-4 col-sm-4" align="right">
                        <a href="https://webnero.electronero.org/reset.html">Recover Wallet</a>
                        </div>
                            <div class="col-lg-12 col-mg-12 col-sm-12">
                            <fieldset>
                                <div class="form-group">
                                    <input id="email" class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input id="password" class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="form-group">
                                    <input id="re-password" class="form-control" placeholder="Re-type Password" name="re-password" type="password" value="">
                                </div>
                                <button id="register" type="button" class="btn btn-lg btn-login btn-block btn-primary">Set Code</button>
                            </fieldset>     
                                </div>
                                <div class="col-lg-12 col-mg-12 col-sm-12" style="text-align: center" align="center">
                                </br>
                                <a href="https://t.me/etnxsupport">Need Help?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include "../templates/pin-code.njk" %}
    </div>
    {% include "../templates/modals/spinner.njk" %}
{% endblock %}

{% block scripts %} 
    <script type="text/javascript" src="../dist/js/pin-code-utils.js"></script>
    <script type="text/javascript" src="../dist/js/register.js?v=6015"></script>
{% endblock %}