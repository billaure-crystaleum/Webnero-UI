<!-- index.njk -->
{% extends "layout.njk" %}

{% block content %}

    <div class="container">
        <div id="register-container" class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-etnx">
                    <div class="panel-heading" style="text-align: center">
                        {% for coin in coins %}
                            <img height="40px" width="40px" src="../img/{{coin}}.png" />
                        {% endfor %}
                    </div>
                    <div class="panel-body">
                        <div class="alert alert-danger" style="display: none">
                        </div>
                        <div role="form">
                        <div class="row" style="position: relative; top:0;margin-bottom:3%;padding-bottom:2%;"> 
                        <ul style="list-style-type: none;margin: 0;padding: 0;">
                          <li style="display: inline; text-align:left;padding-left:2%;"><button class="btn-login" onclick="window.location.href='https://webnero.electronero.org/login.html'">Connect</button></li>
                          <li style="display: inline; padding-right:20%;"></li>
                          <li style="display: inline; text-align:right; position: absolute; right: 0;padding-right:2%;"><button class="btn-login" onclick="window.location.href='https://webnero.electronero.org/reset.html'">Recover</button></li>
                        </ul>
                        </div>
                            <div class="col-lg-12 col-mg-12 col-sm-12">
                            <fieldset>
                                <div class="form-group">
                                    <input id="email" class="form-control" placeholder="E-mail" name="email" type="email" autofocus>
                                </div>
                                <div class="form-group">
                                    <input id="password" class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="form-group">
                                    <input id="re-password" class="form-control" placeholder="Re-type Password" name="re-password" type="password" value="">
                                </div>
                                <button id="register" type="button" class="btn btn-lg btn-login btn-block btn-primary">Set Code</button>
                            </fieldset>     
                                </div>
                                <div class="col-lg-12 col-mg-12 col-sm-12" style="text-align: center" align="center">
                                </br>
                                <div class="row" style="position: relative; top:0;margin-bottom:2%;padding-bottom:1%;"> 
                                <ul style="list-style-type: none;margin: 0;padding: 0;">
                                  <li style="display: inline; text-align: center; position: absolute; margin: 0; left: 50%; margin-right:-50%;"><button class="btn-login" onclick="window.location.href='https://t.me/etnxsupport'">Need Help?</button></li>
                                </ul>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% include "../templates/pin-code.njk" %}
    </div>
    {% include "../templates/modals/spinner.njk" %}
{% endblock %}

{% block scripts %} 
    <script type="text/javascript" src="../dist/js/pin-code-utils.js"></script>
    <script type="text/javascript" src="../dist/js/register.js?v=6022"></script>
{% endblock %}
